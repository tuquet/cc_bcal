{
  "segments": [
    {
      "start": 0.0,
      "end": 5.02,
      "text": "hoặc trò nhìn lá rơi, trong lòng giấy lên nổi buồn khó tạc."
    },
    {
      "start": 5.68,
      "end": 9.66,
      "text": "Anh hỏi, thưa thầy, sao con cứ thấy mọi thứ mất đi."
    },
    {
      "start": 10.4,
      "end": 11.901,
      "text": "Con thấy sợ vô thường."
    },
    {
      "start": 12.64,
      "end": 15.74,
      "text": "Thầy im lặng nhìn một chiếc lá vừa rơi cạnh."
    },
    {
      "start": 16.56,
      "end": 18.5,
      "text": "Rồi nói, con thấy lá rùng,"
    },
    {
      "start": 19.28,
      "end": 22.74,
      "text": "nhưng con có thấy cây đang chuẩn bị cho mầm non mới không?"
    },
    {
      "start": 23.56,
      "end": 25.021,
      "text": "Thầy nói chậm rãi."
    },
    {
      "start": 25.84,
      "end": 27.74,
      "text": "Lá rùng không phải là mức,"
    },
    {
      "start": 28.52,
      "end": 29.621,
      "text": "nó trở thành đất,"
    },
    {
      "start": 30.4,
      "end": 31.501,
      "text": "đất nuôi cây,"
    },
    {
      "start": 32.28,
      "end": 33.901,
      "text": "cây lại sinh lá mới."
    },
    {
      "start": 34.8,
      "end": 36.101,
      "text": "Vạn vật đổi thay,"
    },
    {
      "start": 36.32,
      "end": 37.781,
      "text": "nhưng chẳng gì mất đi."
    },
    {
      "start": 38.6,
      "end": 40.34,
      "text": "Con gọi đó là vô thường."
    },
    {
      "start": 41.24,
      "end": 43.22,
      "text": "Nhưng ta thấy đó là tiếp nối."
    },
    {
      "start": 44.12,
      "end": 46.1,
      "text": "Thầy dặn, con thử ngồi yên."
    },
    {
      "start": 47.0,
      "end": 49.54,
      "text": "Thở vào và biết mình đang còn sống."
    },
    {
      "start": 50.4,
      "end": 53.22,
      "text": "Thở ra và biết thân này cũng sẽ thay đổi."
    },
    {
      "start": 54.16,
      "end": 55.461,
      "text": "Nhận diện vô thường,"
    },
    {
      "start": 55.52,
      "end": 56.581,
      "text": "không phải để buồn,"
    },
    {
      "start": 57.48,
      "end": 59.7,
      "text": "mà để trân quý những gì đang có."
    },
    {
      "start": 60.68,
      "end": 62.021,
      "text": "Người học trò mở mắt,"
    },
    {
      "start": 62.28,
      "end": 64.98,
      "text": "nhìn một chiếc lá rơi xuống mà lòng bình thẳng."
    },
    {
      "start": 65.92,
      "end": 68.66,
      "text": "Anh sẽ thở ra và nói, con hiểu rồi,"
    },
    {
      "start": 69.56,
      "end": 71.98,
      "text": "mất đi cũng là một phần của tiếp nối."
    },
    {
      "start": 72.92,
      "end": 74.101,
      "text": "Không có gì biến mất."
    },
    {
      "start": 74.96,
      "end": 76.061,
      "text": "Chỉ đổi hình dàng."
    },
    {
      "start": 76.96,
      "end": 78.021,
      "text": "Thầy miếng cười,"
    },
    {
      "start": 78.28,
      "end": 79.821,
      "text": "đặt tay lên vai học trò."
    },
    {
      "start": 80.8,
      "end": 81.501,
      "text": "Nhớ nhẹ."
    },
    {
      "start": 82.4,
      "end": 83.741,
      "text": "Khi thấy một chiếc lá rơi,"
    },
    {
      "start": 84.64,
      "end": 85.821,
      "text": "hãy nhớ miếng cười."
    },
    {
      "start": 86.76,
      "end": 88.9,
      "text": "Vì đó là lời nhắc về vô thường."
    },
    {
      "start": 89.8,
      "end": 91.54,
      "text": "Và cũng là lời nhắc rằng"
    },
    {
      "start": 91.6,
      "end": 93.58,
      "text": "sự sống vẫn tiếp nối không ngừng."
    }
  ]
}